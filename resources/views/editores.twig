{% extends 'layout.twig' %}

{% block body %}
<input type="text" class="form-control" id="busqueda" placeholder="Buscar por nombre..">
<form method="POST" action="./modificarEditores">
	{{ csrf_field() }}
	<table class="table table-hover table-bordered">
		<thead>
			<tr>
				<th>Nombre</th>
				<th>Editor</th>
			</tr>
		</thead>
		<tbody id="filaUsuario">
			{% for usuario in usuarios %}
			<tr>
				<td>{{usuario.nombre}}</td>
				{% if usuario.esEditor == true %}
				<td><input class="form-check-input" type="checkbox" name="{{usuario._id}}" checked></td>
				{% else %}
				<td><input class="form-check-input" type="checkbox" name="{{usuario._id}}"></td>
				{% endif %}
			</tr>
			{% endfor %}
		</tbody>				
	</table>
	<div>
		<button type="button" class="btn btn-warning" id="cancelarForm" href="#modalCancelar" data-toggle="modal">Cancelar</button>
		<button type="submit" class="btn btn-success">Guardar</button>
	</div>
</form>
{% include 'modalCancelar.twig' %}
<script type="text/javascript" src="{{ asset('js/fixture.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/editores.js') }}"></script>
{% endblock %}
