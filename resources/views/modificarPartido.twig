{% extends 'layout.twig' %}

{% block body %}
<h1> Modificar Partido </h1>
<form method="POST" action="../modificarPartido/{{partido._id}}">
	{{ csrf_field() }}
	<div class="form-row">
		<div class="form-group col-md-4">
			<label for="equipoLocal">Equipo Local</label>
			<select class="form-control" name="equipoLocal" required>
				{% for equipo in equipos %}
					{% if partido.equipoLocal == equipo._id %}
						<option selected>{{equipo.nombre}}</option>
					{% else %}
						<option>{{equipo.nombre}}</option>
					{% endif %}
				{% endfor %}
			</select>
		</div>
		<div class="form-group col-md-2">
			<label for="golesLocal">Goles Local</label>
			<input type="number" min="0" name="golesLocal" value="{{partido.golesLocal}}">
		</div>
		<div class="form-group col-md-2">
			<label for="golesVisita">Goles Visitante</label>
			<input type="number" min="0" name="golesVisita" value="{{partido.golesVisita}}">
		</div>
		<div class="form-group col-md-4">
			<label for="equipoVisita">Equipo Visitante</label>
			<select class="form-control" name="equipoVisita" required>
				{% for equipo in equipos %}
					{% if partido.equipoVisitante == equipo._id %}
						<option selected>{{equipo.nombre}}</option>
					{% else %}
						<option>{{equipo.nombre}}</option>
					{% endif %}
				{% endfor %}
			</select>
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-6">
			<label for="cancha">Cancha</label>
			<input type="text" class="form-control" placeholder="Cancha del partido" name="cancha" value="{{partido.cancha}}" required>        		
		</div>
		<div class="form-group col-md-4">
			<label for="fecha">Fecha</label>
			<input type="text" class="form-control" placeholder="Fecha del partido" name="fecha" value="{{partido.fecha}}" required>        		
		</div>
		<div class="form-group col-md-2">
			<label for="hora">Hora</label>
			<input type="text" class="form-control" placeholder="Hora del partido" name="hora" value="{{partido.hora}}" required>        		
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-6">
			<label for="arbitro">Arbitro</label>
			<input type="text" class="form-control" placeholder="Arbitro del partido" name="arbitro" value="{{partido.arbitro}}" required>        		
		</div>
		<div class="form-group col-md-6">
			<label for="editor">Editor</label>
			<select class="form-control" name="editor">
				<option>Seleccione Editor...</option>
				{% for editor in editores %}
					{% if editor.nombre == editorActual %}
						<option selected>{{editor.nombre}}</option>
					{% else %}
						<option>{{editor.nombre}}</option>
					{% endif %}
				{% endfor %}
			</select>
		</div>
	</div>
	<div>
		<button type="button" class="btn btn-warning" id="cancelarForm" onclick="goBack()">Cancelar</button>
		<button type="submit" class="btn btn-success">Guardar</button>		
	</div>
</form>
<script type="text/javascript" src="{{ asset('js/fixture.js') }}"></script>
{% endblock %}