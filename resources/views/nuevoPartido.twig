{% extends 'layout.twig' %}

{% block body %}
<h1>Nuevo Partido</h1>
<form method="POST" action="../nuevoPartido/{{IDFecha}}">
	{{ csrf_field() }}
	<div class="form-row">
		<div class="form-group col-md-6">
			<label for="equipoLocal">Equipo Local</label>
			<select class="form-control" name="equipoLocal" required>
				{% for equipo in equipos %}
					<option>{{equipo.nombre}}</option>
				{% endfor %}
			</select>
		</div>
		<div class="form-group col-md-6">
			<label for="equipoVisita">Equipo Visitante</label>
			<select class="form-control" name="equipoVisita" required>
				{% for equipo in equipos %}
					<option>{{equipo.nombre}}</option>
				{% endfor %}
			</select>
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-6">
			<label for="cancha">Cancha</label>
			<input type="text" class="form-control" placeholder="Cancha del partido" name="cancha" required>        		
		</div>
		<div class="form-group col-md-4">
			<label for="fecha">Fecha</label>
			<input type="text" class="form-control" placeholder="Fecha del partido" name="fecha" required>        		
		</div>
		<div class="form-group col-md-2">
			<label for="hora">Hora</label>
			<input type="text" class="form-control" placeholder="Hora del partido" name="hora" required>        		
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-6">
			<label for="arbitro">Arbitro</label>
			<input type="text" class="form-control" placeholder="Arbitro del partido" name="arbitro" required>        		
		</div>
		<div class="form-group col-md-6">
			<label for="editor">Editor</label>
			<select class="form-control" name="editor">
				<option selected>Seleccione Editor...</option>
				{% for editor in editores %}
					<option>{{editor.nombre}}</option>
				{% endfor %}
			</select>
		</div>
	</div>
	<div>
		<button type="button" class="btn btn-warning" id="cancelarForm" href="#modalCancelar" data-toggle="modal">Cancelar</button>
		<button type="submit" class="btn btn-success">Guardar</button>
	</div>
</form>
{% include 'modalCancelar.twig' %}
<script type="text/javascript" src="{{ asset('js/fixture.js') }}"></script>
{% endblock %}